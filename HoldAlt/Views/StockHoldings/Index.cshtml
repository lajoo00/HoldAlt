@model IEnumerable<HoldAlt.ViewModels.StockHoldingVM>

@{
    ViewBag.Title = "Index";
}

<h2>Stock Holdings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberShares)
        </th>
        <th width="70">
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th style="text-align:right;">
            @Html.DisplayNameFor(model => model.PricePaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commission)
        </th>
        <th width="100">
            @Html.DisplayNameFor(model => model.PriceToday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Change)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgVol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueToday)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ticker)
        </td>
        <td width="60" style="text-align:right;padding-right:20px;">
            @*@Html.DisplayFor(modelItem => item.NumberShares)*@
            @String.Format("{0:#,##0}", item.NumberShares)
        </td>
        <td width="70">
            @Html.DisplayFor(modelItem => item.Account)
        </td>
        <td style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.PricePaid)*@
            @String.Format("$ {0:#,##0.00}", item.PricePaid)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Commission)*@
            @String.Format("$ {0:#,##0.00}", item.Commission)
        </td>
        <td width="100" style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.PriceToday)*@
            @String.Format("$ {0:#,##0.00}", item.PriceToday)
        </td>
        <td style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.Change)*@
            @if (item.Change < 0)
            {
                <span style="color:red;">@String.Format("$ {0:#,##0.00}", item.Change)</span>
            }
            else
            {
                <span style="color:green;">@String.Format("$ {0:#,##0.00}", item.Change)</span>
            }
        </td>
        <td style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.Volume)*@
            @String.Format("{0:#,##0}", item.Volume)
        </td>
        <td style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.AvgVol)*@
            @String.Format("{0:#,##0}", item.AvgVol)
        </td>
        <td style="text-align:right">
            @*@Html.DisplayFor(modelItem => item.ValueToday)*@
            @String.Format("$ {0:#,##0.00}", item.ValueToday)
        </td>
    </tr>
}

</table>

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <h3>
            Total:
            @String.Format("{0:#,##0.00}", ViewBag.Value)
        </h3>
    </div>
</div>

<p><a class="btn btn-primary" href="/StockHoldings/Index">Refresh &raquo;</a></p>
