@model IEnumerable<HoldAlt.ViewModels.TradeVM>

@{
    ViewBag.Title = "My Trades";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoinName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExchangeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountTraded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoughtYes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceBTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceUSD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommissionAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommissionCoin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CoinName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TradeDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExchangeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountTraded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoughtYes)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.PriceBTC)*@
            @String.Format("{0:#,##0.00000000}", item.PriceBTC)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.PriceUSD)*@
            @String.Format("{0:#,##0.0000}", item.PriceUSD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommissionAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommissionCoin)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TradeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TradeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TradeID })
        </td>
    </tr>
}

</table>
