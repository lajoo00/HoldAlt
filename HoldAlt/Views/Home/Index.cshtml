@{
    ViewBag.Title = "Hold Alt Coins";
}

<div class="jumbotron" style="height:200px; background-color:#200b20; color:white;">
    <div class="col-md-6" style="margin-top:-30px;">
        <h2>
            HoldAlt
        </h2>
        <h3><i>
            Manage your Stocks and Alt Coins
        </i></h3>
            <a class="btn btn-primary" href="/Summary/Index">Summary &raquo;</a>
            @*
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-default" href="/TVSchedules/Index">TV &raquo;</a>
            *@
    </div>
    <div class="col-md-4">
        <img src="/Images/AltCoins.png" style="align-content:center; margin-top: -52px; padding-left: 200px;" />
        
    </div>
</div>

<div class="col-md-8">
    <fieldset>
        <legend style="text-align: center;color:#428BCA;font-size:xx-large"><strong>Alt Coins</strong></legend>
        <div class="panel panel-default" style="margin-top: -25px;background-color:lightgray;">
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="row">
                        <h3>Exchanges</h3>
                        Manage the exchanges you use.<br /><br />
                        <p><a class="btn btn-primary" href="/Exchanges/Index">Exchanges &raquo;</a></p>
                    </div>
                    <div class="row">
                        <h3>Coins</h3>
                        Alt Coins Supported.<br /><br />
                        <p><a class="btn btn-primary" href="/AltCoins/Index">Coins &raquo;</a></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <h3>Trades</h3>
                        View your trades and enter new ones.<br /><br />
                        <p><a class="btn btn-primary" href="/Trades/Index">Trades &raquo;</a></p>
                    </div>
                    <div class="row">
                        <h3>Holdings</h3>
                        View your holdings.<br /><br />
                        <p><a class="btn btn-primary" href="/Holdings/Index">Holdings &raquo;</a></p>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>

<div class="col-md-4">
    <fieldset>
        <legend style="text-align:center;color:#428BCA;font-size:xx-large;"><strong>Stocks</strong></legend>
        <div class="panel panel-default" style="margin-top: -25px; background-color:lightgray;">
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="row">
                        <h3>Stock Trades</h3>
                        View your trades and enter new ones.<br /><br />
                        <p><a class="btn btn-primary" href="/StockTrades/Index">Trades &raquo;</a></p>
                    </div>
                    <div class="row">
                        <h3>Stock Holdings</h3>
                        View your holdings.<br /><br />
                        <p><a class="btn btn-primary" href="/StockHoldings/Index">Holdings &raquo;</a></p>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>
